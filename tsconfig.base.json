{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@orbita/ticket-system/domain-logic": [
        "libs/ticket-system/domain-logic/src/index.ts"
      ],
      "@orbita/ticket-system/ui": ["libs/ticket-system/ui/src/index.ts"],
      "@orbita/ticket-system/feature-listing": [
        "libs/ticket-system/feature-listing/src/index.ts"
      ],
      "@orbita/ticket-system/shell": ["libs/ticket-system/shell/src/index.ts"],
      "@orbita/ticket-system/feature-sd-request-wizzard": [
        "libs/ticket-system/feature-sd-request-wizzard/src/index.ts"
      ],
      "@orbita/shared/environment": ["libs/shared/environment/src/index.ts"],
      "@orbita/ticket-system/utils": ["libs/ticket-system/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
