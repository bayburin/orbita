{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@orbita/sd-request-listing/domain-logic": [
        "libs/sd-request-listing/domain-logic/src/index.ts"
      ],
      "@orbita/sd-request-listing/ui": [
        "libs/sd-request-listing/ui/src/index.ts"
      ],
      "@orbita/sd-request-listing/feature-listing": [
        "libs/sd-request-listing/feature-listing/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
